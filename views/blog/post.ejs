<div class="container mt-4 mb-4">
  <%- include ("./../partials/_alert_messages") %>
    <div class="row">
        <div class="col-12">
            <h3><%= post.title %></h3>
            <small class="text-muted">
                <span><%= moment(post.createdAt).format('DD MMMM YYYY, HH:mm:ss') %></span>, <%= post.user.name %>
            </small>
            <hr class="my-4">
            <div class="container">
                <%- post.body %>
            </div>
            <div class="container mb-4">
                <div class="row">
                  <div class="col text-center">
                    <a href="/blog" class="btn btn-info px-4 ml-2">Go to Blog Archive</a>
                  </div>
                </div>
              </div>
        </div>
    </div>
</div>